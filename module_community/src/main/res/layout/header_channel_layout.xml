<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="频道"
            android:textColor="@color/comment_content"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/channel_more_arrow_iv"
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_arrow_right" />

        <TextView
            android:id="@+id/header_channel_more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@+id/channel_more_arrow_iv"
            android:text="更多"
            android:textColor="#FFB8B8B8"
            android:textSize="13sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/header_channel_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:src="#f5f5f5" />

</LinearLayout>