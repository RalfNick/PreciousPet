<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.rockerhieu.emojicon.EmojiconTextView
        android:id="@+id/item_channel_emoji_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:textColor="#FF2C2C2C"
        android:textSize="15sp"
        tools:text="dfkjdkjdkfjdkfjkldfj" />

    <RelativeLayout
        android:id="@+id/item_channel_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/item_channel_first_iv"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginStart="12dp"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/item_channel_video_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/item_channel_first_iv"
            android:layout_alignStart="@+id/item_channel_first_iv"
            android:layout_centerHorizontal="true"
            android:layout_margin="40dp"
            android:src="@mipmap/icon_video_play"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/item_channel_second_iv"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/item_channel_first_iv"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/item_channel_third_iv"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/item_channel_second_iv"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp">

        <ImageView
            android:id="@+id/item_channel_user_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="12dp"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_channel_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/item_channel_user_iv"
            android:text=""
            android:textColor="#FF449DDE"
            android:textSize="13sp"
            tools:text="李四" />

        <TextView
            android:id="@+id/item_channel_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_channel_type_bkg"
            android:drawableStart="@mipmap/icon_channel"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="#FF449DDE"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="111111" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white" />
</LinearLayout>