<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.rockerhieu.emojicon.EmojiconTextView
        android:id="@+id/item_channel_detail_emoji_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="11dp"
        android:textColor="#FF2C2C2C"
        android:textSize="15sp"
        tools:text="dfkjdkjdkfjdkfjkldfj" />

    <RelativeLayout
        android:id="@+id/item_channel_detail_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="visible">

        <com.ralf.module_community.widget.player.SimpleCoverVideo
            android:id="@+id/item_channel_detail_player"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginStart="12dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_channel_detail_cover_iv"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginStart="12dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            tools:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/item_channel_detail_first_iv"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginStart="12dp"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/item_channel_detail_video_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/item_channel_detail_first_iv"
            android:layout_alignEnd="@+id/item_channel_detail_first_iv"
            android:layout_centerHorizontal="true"
            android:layout_margin="40dp"
            android:src="@mipmap/icon_video_play"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/item_channel_detail_second_iv"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/item_channel_detail_first_iv"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/item_channel_detail_third_iv"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/item_channel_detail_second_iv"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp">

        <ImageView
            android:id="@+id/item_channel_detail_user_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_channel_detail_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/item_channel_detail_user_iv"
            android:text=""
            android:textColor="#FF449DDE"
            android:textSize="13sp"
            tools:text="李四" />

        <TextView
            android:id="@+id/item_comment_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:textColor="#888888"
            android:textSize="12sp"
            tools:text="100" />

        <ImageView
            android:id="@+id/item_comment_icon_iv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@id/item_comment_num_tv"
            android:src="@mipmap/icon_channel_comment_num" />

        <TextView
            android:id="@+id/item_comment_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@id/item_comment_icon_iv"
            android:gravity="center_vertical"
            android:textColor="#888888"
            android:textSize="12sp"
            tools:text="12小时前" />


        <ImageView
            android:id="@+id/item_comment_time_icon_iv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@id/item_comment_time_tv"
            android:src="@mipmap/icon_post_time" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white" />

</LinearLayout>