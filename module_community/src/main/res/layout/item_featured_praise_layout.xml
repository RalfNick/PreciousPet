<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ralf.module_community.mvp.ui.view.FeaturedPersonView
        android:id="@+id/item_praise_person_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        android:gravity="start"
        app:circle="true"
        app:horizontalSpace="6dp"
        app:lineNum="10"
        app:maxNum="10"
        app:multiLine="false"
        app:picSize="28dp">

    </com.ralf.module_community.mvp.ui.view.FeaturedPersonView>

    <TextView
        android:id="@+id/item_praise_person_num"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shape_person_number"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="#FFFF7624"
        android:textSize="12sp"
        tools:text="14" />

    <LinearLayout
        android:id="@+id/item_praise_options_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_praise_person_view"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/item_praise_support_rb"
            android:layout_width="57dp"
            android:layout_height="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/selector_send_like"
            android:button="@null"
            android:drawablePadding="12dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            tools:ignore="RtlSymmetry" />

        <RadioButton
            android:id="@+id/item_praise_gift_rb"
            android:layout_width="57dp"
            android:layout_height="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:background="@mipmap/footer_gift_send"
            android:button="@null"
            android:drawablePadding="6dp"
            android:paddingStart="8dp"
            android:paddingTop="1dp"
            tools:ignore="RtlSymmetry" />

        <RadioButton
            android:id="@+id/item_praise_comment_rb"
            android:layout_width="57dp"
            android:layout_height="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:background="@mipmap/footer_comment"
            android:button="@null"
            android:drawablePadding="6dp"
            android:paddingStart="8dp"
            android:paddingTop="1dp"
            tools:ignore="RtlSymmetry" />

        <RadioButton
            android:id="@+id/item_praise_share_rb"
            android:layout_width="57dp"
            android:layout_height="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:background="@mipmap/footer_share"
            android:button="@null"
            android:drawablePadding="6dp"
            android:paddingStart="8dp"
            android:paddingTop="1dp"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_praise_not_support_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_praise_person_view"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:alpha="0.6"
        android:scaleType="centerCrop"
        android:visibility="invisible" />

</RelativeLayout>