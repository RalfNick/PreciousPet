<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_pet_head_portrait_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_pet_head_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/item_pet_head_portrait_iv"
        android:maxWidth="80dp"
        android:singleLine="true"
        android:textColor="#FF2C2C2C"
        android:textSize="14sp"
        tools:text="喵喵喵大是大非阿斯蒂芬啊答等分大厦法定身份" />

    <ImageView
        android:id="@+id/item_pet_sex_iv"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@id/item_pet_head_name_tv"
        android:scaleType="centerInside"
        tools:src="@mipmap/icon_sex_woman" />

    <TextView
        android:id="@+id/item_pet_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/item_pet_head_portrait_iv"
        android:gravity="start|center_vertical"
        android:textColor="#FF888888"
        android:textSize="12sp"
        tools:text="哈士奇" />

    <TextView
        android:id="@+id/item_pet_age_tv"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/item_pet_type_tv"
        android:gravity="start|center_vertical"
        android:textColor="#FF888888"
        android:textSize="12sp"
        tools:text="9岁" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5" />

</RelativeLayout>