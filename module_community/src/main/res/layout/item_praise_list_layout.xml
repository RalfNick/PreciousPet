<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_praise_head_portrait_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_praise_head_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/item_praise_head_portrait_iv"
        android:maxWidth="80dp"
        android:singleLine="true"
        android:textColor="#FF2C2C2C"
        android:textSize="14sp"
        tools:text="喵喵喵大是大非阿斯蒂芬啊答等分大厦法定身份" />

    <ImageView
        android:id="@+id/item_praise_sex_iv"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@id/item_praise_head_name_tv"
        android:scaleType="centerInside"
        tools:src="@mipmap/icon_sex_woman" />


    <ImageView
        android:id="@+id/item_praise_location_iv"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/item_praise_head_portrait_iv"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_location" />

    <TextView
        android:id="@+id/item_praise_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/item_praise_location_iv"
        android:gravity="start|center_vertical"
        android:textColor="#FF888888"
        android:textSize="12sp"
        tools:text="北京" />

    <com.ralf.module_community.mvp.ui.view.HeadPortraitListView
        android:id="@+id/item_praise_sublist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:gravity="end"
        app:circle="true"
        app:horizontalSpace="6dp"
        app:lineNum="4"
        app:maxNum="4"
        app:multiLine="false"
        app:picSize="28dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5" />

</RelativeLayout>