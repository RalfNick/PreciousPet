<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/emojicon_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:visibility="gone">

            <ImageView
                android:id="@+id/edit_emojicon_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/pindao_emjon" />

            <ImageView
                android:id="@+id/search_huati_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/edit_emojicon_image"
                android:src="@mipmap/huati_image"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/send_discucuss_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/edit_text_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:layout_toStartOf="@+id/emojicon_image"
                android:background="@drawable/qieyuan_background"
                android:orientation="horizontal">

                <com.rockerhieu.emojicon.EmojiconEditText
                    android:id="@+id/emojicon_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@color/mPinglun"
                    android:focusable="true"
                    android:gravity="center_vertical|left"
                    android:hint="添加评论"
                    android:textColorHint="@color/comment_content"
                    android:textCursorDrawable="@drawable/guangbiao_discuss"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/emojicon_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/edit_text_layout"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toStartOf="@+id/emojicon_btn"
                android:src="@mipmap/emojicon_image" />

            <Button
                android:id="@+id/emojicon_btn"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/send_discuss_bg"
                android:enabled="false"
                android:text="发送"
                android:textColor="@drawable/emjicon_send_btn_text_color" />

        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/comment_emojicons_layout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:visibility="gone"
        tools:layout_height="200dp"
        tools:visibility="visible" />

</LinearLayout>