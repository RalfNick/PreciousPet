<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#f2473d">

    <ImageView
        android:id="@+id/heat_praise_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_back" />

    <RadioGroup
        android:id="@+id/heat_praise_toolbar_rg"
        android:layout_width="199dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/heat_praise_toolbar_first_rb"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_heat_praise"
            android:button="@null"
            android:gravity="center"
            android:text="魅力榜"
            android:textColor="@drawable/selector_color_heat_praise_rb"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/heat_praise_toolbar_second_rb"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginStart="19dp"
            android:background="@drawable/selector_heat_praise"
            android:button="@null"
            android:gravity="center"
            android:text="土豪榜"
            android:textColor="@drawable/selector_color_heat_praise_rb"
            android:textSize="17sp" />
    </RadioGroup>

    <Button
        android:id="@+id/heat_praise_toolbar_btn"
        android:layout_width="28dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:background="@null"
        android:gravity="center"
        android:text="说明"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp"
        android:visibility="invisible" />

</RelativeLayout>