<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/new_bg"
    android:orientation="vertical"
    tools:context=".mvp.ui.EntranceActivity">

    <Button
        android:id="@+id/activity_entrance_register"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_above="@+id/activity_entrance_login"
        android:layout_marginBottom="11dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/new_register"/>

    <Button
        android:id="@+id/activity_entrance_login"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/new_login"/>

</RelativeLayout>