<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.LoginActivity">

    <include
        layout="@layout/layout_title" />

    <EditText
        android:id="@+id/login_phone_edit"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/white"
        android:hint="@string/phone"
        android:textColorHighlight="#D1D1D1"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/app_background" />

    <EditText
        android:id="@+id/login_password_edit"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/colorWhite"
        android:hint="@string/login_password"
        android:inputType="textPassword"
        android:textColorHighlight="#D1D1D1"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_forgot_password_btn"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/shape_login_forgot_pw"
            android:gravity="center"
            android:text="@string/forgot_password"
            android:textColor="#ff888888"
            android:textSize="14sp" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/selector_login_btn_bg"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/login_app"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/login_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:textSize="13sp"
        tools:text="已阅读并同意" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/recommend_login_method"
        android:textColor="@color/comment_content"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_weixin_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/login_weixin" />

        <ImageView
            android:id="@+id/login_qq_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="30dp"
            android:src="@mipmap/login_qq" />

    </LinearLayout>

</LinearLayout>