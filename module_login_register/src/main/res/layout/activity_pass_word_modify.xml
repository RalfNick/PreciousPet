<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.PassWordModifyActivity">

    <include layout="@layout/layout_title" />

    <EditText
        android:id="@+id/phone_modify_et"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:background="@color/colorWhite"
        android:hint="@string/phone"
        android:textColorHighlight="@color/login_text_color"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/app_background" />

    <EditText
        android:id="@+id/password_modify_et"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:background="@color/colorWhite"
        android:hint="@string/login_password"
        android:inputType="textPassword"
        android:textColorHighlight="@color/login_text_color"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/app_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_vertify_code_et"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:background="@color/colorWhite"
            android:hint="@string/vertify_code"
            android:textColorHighlight="@color/login_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/send_vertify_code_btn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/selector_login_btn_bg"
            android:text="@string/senod_code"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="@string/senod_code" />

    </RelativeLayout>

    <Button
        android:id="@+id/modify_password_save_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:enabled="false"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="18dp"
        android:background="@drawable/selector_login_btn_bg"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="@string/login_save"/>

</LinearLayout>