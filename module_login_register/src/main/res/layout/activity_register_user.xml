<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="36dp">

        <ImageView
            android:id="@+id/register_user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/register_default_image" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@+id/register_user_image"
            android:layout_alignEnd="@+id/register_user_image"
            android:scaleType="centerCrop"
            android:src="@mipmap/register_camera_pic" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/register_user_name_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:text="@string/register_user_name_title"
            android:textColor="#ff2c2c2c"
            android:textSize="14sp"
            tools:text="@string/register_user_name_title" />

        <EditText
            android:id="@+id/register_user_set_name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/register_user_name_title_tv"
            android:gravity="center_vertical|end"
            android:hint="@string/register_user_name_setting"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="#ff2c2c2c"
            android:textColorHint="@color/gray_C8"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:text="@string/register_user_sex_title"
            android:textColor="#ff2c2c2c"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/register_user_sex_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/register_sex_woman_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/checked_register_woman"
                android:text="@string/register_user_woman"
                android:textColor="@color/comment_content"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/register_sex_man_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:button="@null"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/checked_register_man"
                android:text="@string/register_user_man"
                android:textColor="@color/comment_content"
                android:textSize="14sp" />

        </RadioGroup>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/app_background" />

    <Button
        android:id="@+id/register_new_user_finish_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/selector_login_btn_bg"
        android:enabled="false"
        android:text="@string/register_finish"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>