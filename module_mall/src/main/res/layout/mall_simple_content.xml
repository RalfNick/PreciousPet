<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="125dp"
              android:layout_height="wrap_content"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/shopping_simple_content_image"
        android:layout_width="100dp"
        android:layout_height="99dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/shopping_simple_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#FF2C2C2C"
        android:textSize="12sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="12dp">
        <TextView
            android:id="@+id/shopping_simple_content_nowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFF0000"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/shopping_simple_content_oldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>