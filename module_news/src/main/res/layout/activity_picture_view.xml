<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <include
        android:id="@+id/activity_photo_view_toolbar"
        layout="@layout/layout_title" />

    <com.ralf.module_news.mvp.ui.view.PhotoViewPager
        android:id="@+id/activity_photo_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_photo_view_toolbar"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="78dp" />

    <LinearLayout
        android:id="@+id/photo_preview_option_container_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/photo_preview_download_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="18dp"
            android:src="@mipmap/icon_download" />

        <RadioButton
            android:id="@+id/photo_preview_collection_tv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="21dp"
            android:background="@drawable/selector_bkg_collection"
            android:button="@null" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:background="#66000000">

        <TextView
            android:id="@+id/photo_preview_page_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:textColor="#FFFFFFFF"
            android:textSize="17sp"
            tools:text="10/20" />

        <TextView
            android:id="@+id/photo_preview_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#FFFFFFFF"
            android:textSize="17sp"
            tools:text="一只小喵喵" />

        <TextView
            android:id="@+id/photo_preview_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_preview_title_tv"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:layout_toStartOf="@+id/photo_preview_page_num_tv"
            android:maxLines="3"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp"
            tools:text="一只小喵喵贷款人金额可进入卡机肯定积分卡急啊打开立方卡拉胶克劳福德分开了" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="#333333" />
</RelativeLayout>
