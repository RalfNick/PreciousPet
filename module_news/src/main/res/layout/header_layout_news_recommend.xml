<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_search_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/bg_search"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_search_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:drawableStart="@mipmap/icon_search"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#FF888888"
            android:textSize="14sp" />
    </LinearLayout>

    <com.youth.banner.Banner
        android:id="@+id/news_recommend_banner"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        app:delay_time="3000"
        app:image_scale_type="fit_xy"
        app:indicator_drawable_selected="@drawable/shape_banner_selected"
        app:indicator_drawable_unselected="@drawable/shape_banner_unselected"
        app:indicator_height="6dp"
        app:indicator_margin="2dp"
        app:indicator_width="6dp"
        app:title_textcolor="@color/white"
        app:title_textsize="14sp" />

</LinearLayout>