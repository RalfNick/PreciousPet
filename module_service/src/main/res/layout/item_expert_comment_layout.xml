<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_comment_layout"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:layout_marginBottom="1dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/icon_top_iv"
        android:layout_width="32dp"
        android:layout_height="14dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/icon_top"
        android:visibility="visible" />

    <TextView
        android:id="@+id/seek_help_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/icon_top_iv"
        android:text=""
        android:textColor="@color/camera_bg"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/expert_more_iv"
        android:layout_width="16dp"
        android:layout_height="13dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/seek_help_title_tv"
        android:src="@mipmap/expert_first_page_image"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/seek_help_user_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/seek_help_title_tv"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/seek_help_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seek_help_title_tv"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/seek_help_user_iv"
        android:textColor="@color/discuss_text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/seek_help_discuss_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="9dp"
        android:gravity="center|center_horizontal"
        android:textColor="#d1d1d1"
        android:textSize="12sp"
        tools:text="30" />

    <ImageView
        android:id="@+id/seek_help_discuss_number_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/seek_help_discuss_number_tv"
        android:src="@mipmap/icon_discuss_msg" />

    <TextView
        android:id="@+id/seek_help_discuss_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="9dp"
        android:layout_toStartOf="@+id/seek_help_discuss_number_iv"
        android:textColor="#d1d1d1"
        android:textSize="12sp"
        tools:text="5天前" />

    <ImageView
        android:id="@+id/seek_help_discuss_time_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/seek_help_discuss_time_tv"
        android:src="@mipmap/icon_time_image" />
</RelativeLayout>