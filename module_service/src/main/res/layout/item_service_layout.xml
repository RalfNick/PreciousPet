<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/item_service_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_service_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/item_service_iv"
        android:text="专家在线"
        android:textColor="@color/discuss_content"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_service_des_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_service_title_tv"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/item_service_iv"
        android:text="宠物专家为您解答各类养宠疑问"
        android:textColor="@color/discuss_text_color"
        android:textSize="13sp" />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:src="@mipmap/icon_arrow_right" />

</RelativeLayout>